<% if spree_current_user %>
  <li>
    <%= link_to "#", class: "dropdown-toggle", "data-toggle" => "dropdown", role: "button", "aria-expanded" => "true" do %>
      <%= Spree.t(:my_account) %>
      <span class="caret"></span>
    <% end %>
    <ul class="dropdown-menu" role="menu">
      <li><%= link_to "修改密码", spree.edit_account_path %></li>
      <li><%= link_to "我的订单", spree.account_path %></li>
      <li><%= link_to Spree.t(:logout), spree.logout_path %></li>
    </ul>
  </li>
<% else %>
  <li>
    <%= link_to Spree.t(:login_or_reg), spree.login_path, class: "dropdown-toggle", "data-toggle" => "dropdown", role: "button", "aria-expanded" => "true" %>
    <ul class="dropdown-menu menu-login" role="menu">
      <li data-stopPropagation="true">
        <%= render :partial => 'spree/shared/login', :locals => {:with_signup => true, show_reg_btn: true} %>
      </li>
    </ul>
  </li>
<!--   <li>
    <%= link_to Spree.t(:signup), spree.signup_path %>
  </li> -->
<% end %>
