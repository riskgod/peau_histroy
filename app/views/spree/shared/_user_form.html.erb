<div class="form-group">
  <%= f.label :email, Spree.t(:email), class: "col-md-4 control-label" %>
  <div class="col-md-8">
    <%= f.email_field :email, class: 'form-control input-sm', label: false %>
  </div>
</div>
<div class="form-group">
  <%= f.label :password, Spree.t(:password), class: "col-md-4 control-label" %>
  <div class="col-md-8">
    <%= f.password_field :password, as: :password, class: 'form-control input-sm', label: false %>
  </div>
</div>
<div class="form-group">
  <%= f.label :password_confirmation, Spree.t(:confirm_password), class: "col-md-4 control-label" %>
  <div class="col-md-8">
    <%= f.password_field :password_confirmation, as: :password, class: 'form-control input-sm', label: false %>
  </div>
</div>
