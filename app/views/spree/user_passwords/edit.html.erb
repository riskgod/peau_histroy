<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h3 class="text-center"><strong><%= Spree.t(:change_my_password) %></strong></h3>
    <hr/>
    <div data-hook="signup">
      <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @spree_user } %>
      <%= form_for @spree_user, :as => :spree_user, :url => spree.update_password_path, :method => :put do |f| %>
        <div data-hook="signup_inside_form">
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= f.label :password, Spree.t(:password) %>
                <%= f.password_field :password, class: 'form-control input-sm', label: false %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= f.label :password_confirmation, Spree.t(:confirm_password) %>
                <%= f.password_field :password_confirmation, class: 'form-control input-sm', label: false %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <%= f.hidden_field :reset_password_token %>
              <%= f.submit Spree.t(:update), :class => 'btn btn-primary', data: { disable_with: "请稍等" } %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
