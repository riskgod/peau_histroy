<div class="row pt-60">
  <div class="row col-md-8 col-md-offset-2">
    <div class="col-md-5">
      <% @body_id = 'login' %>
      <h3 class="text-center"><strong><%= Spree.t(:loginin_as_member) %></strong></h3>
      <hr/>
      <div data-hook="login">
        <%= render :partial => 'spree/shared/login', :locals => {:with_signup => false, show_reg_btn: false} %>
      </div>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-6">
      <h3 class="text-center"><strong><%= Spree.t(:new_customer) %></strong></h3>
      <hr/>
      <div data-hook="signup">
        <%= form_for @user, :as => :spree_user, :url => spree.registration_path(@user), html: { class: "form-horizontal" } do |f| %>
          <div data-hook="signup_inside_form">
            <%= render :partial => 'spree/shared/user_form', :locals => { :f => f } %>
            <div class="row">
              <div class="col-md-8 col-md-offset-4">
                <%= f.submit Spree.t(:create), :class => 'btn btn-primary', data: {disable_with: "请稍等"} %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
